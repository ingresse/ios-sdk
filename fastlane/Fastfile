# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

default_platform(:ios)

platform :ios do
  before_all do
    setup_circle_ci
  end

  desc "Run Tests with coverage"
  lane :tests do
    scan(scheme: "IngresseSDK",
      code_coverage: true,
      derived_data_path: "DerivedData")
    slather(build_directory: "DerivedData",
      scheme: "IngresseSDK",
      proj: "IngresseSDK.xcodeproj",
      coveralls: true,
      simple_output: true)
  end

  desc "Run Tests"
  lane :test do
    scan(scheme: "IngresseSDK",
      code_coverage: true,
      derived_data_path: "DerivedData")
  end

  desc "Increment Major Version"
  lane :increment_major do
    increment_version_number(
      bump_type: "major"
    )
  end

  desc "Increment Minor Version"
  lane :increment_minor do
    increment_version_number(
      bump_type: "minor"
    )
  end

  desc "Increment Patch Version"
  lane :increment_patch do
    increment_version_number(
      bump_type: "patch"
    )
  end

  desc "Push IngresseSDK to CocoaPods"
  lane :pod_push_sdk do |options|

    pod_lib_lint(
      verbose: false,
      use_bundle_exec: false
    )

    version_to_increment = UI.select("Select version increment type:",["Major", "Minor", "Path"])

    case version_to_increment
    when "Major"
      increment_major
    when "Minor"
      increment_minor
    when "Path"
      increment_patch
    else
      increment_patch
    end

    version = get_version_number()

    version_bump_podspec(
      path: "IngresseSDK.podspec",
      version_number: version
    )

    clean_build_artifacts()

    commit_version_bump(
      message: "Increase version number",
      xcodeproj: "IngresseSDK.xcodeproj",
      include: %w[IngresseSDK.podspec],
      force: true
    )

    ensure_git_branch(
      branch: "release/" + version
    )

    push_to_git_remote(
      remote: 'origin',
      local_branch: "release/" + version,
      remote_branch: "release/" + version,
      force: false
    )

    pull_request = create_pull_request(
      repo: "ingresse/ios-sdk",
      title: "Release - " + version,
      body: "New release - generated by fastlane"
    )

    prerelease_selection = UI.confirm("This is a pre-release?")
    prerelease = prerelease_selection ? true : false

    set_github_release(
      repository_name: "ingresse/ios-sdk",
      api_token: ENV["GITHUB_TOKEN"],
      tag_name: version,
      commitish: "release/" + version,
      name: "Release " + version,
      description: "",
      is_draft: false,
      is_prerelease: prerelease
    )

    pod_lib_lint(
      verbose: false,
      use_bundle_exec: false,
      sources: [pull_request]
    )

    if UI.confirm("It's everything correct so far? POD TRUNK PUSH can be executed?")
      pod_push(
        path: "IngresseSDK.podspec",
        use_bundle_exec: false
      )
    else
      UI.user_error!("POD TRUNK PUSH step was aborted. Please, do it manually.")
    end
  end
end